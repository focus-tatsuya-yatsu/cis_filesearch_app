{
  "name": "cis-file-scanner",
  "version": "1.0.0",
  "type": "module",
  "description": "CIS File Search System - File Scanner for NAS",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t cis-file-scanner:latest .",
    "docker:run": "docker-compose up",
    "docker:save": "docker save cis-file-scanner:latest -o deployment/cis-scanner.tar"
  },
  "keywords": [
    "file-scanner",
    "nas",
    "aws",
    "s3",
    "typescript"
  ],
  "author": "CIS Development Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.609.0",
    "@aws-sdk/client-secrets-manager": "^3.928.0",
    "@aws-sdk/client-sqs": "^3.609.0",
    "@aws-sdk/lib-storage": "^3.609.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "mime-types": "^2.1.35",
    "node-cron": "^3.0.3",
    "p-limit": "^4.0.0",
    "sqlite3": "^5.1.7",
    "validator": "^13.15.23",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.14.9",
    "@types/node-cron": "^3.0.11",
    "@types/validator": "^13.15.4",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
