# ==========================================
# AWS Configuration
# ==========================================
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Configuration
S3_BUCKET=cis-filesearch-storage
S3_PROCESSED_PREFIX=processed/
S3_FAILED_PREFIX=failed/

# SQS Configuration
SQS_QUEUE_URL=https://sqs.ap-northeast-1.amazonaws.com/123456789012/file-processing-queue
SQS_WAIT_TIME=20
SQS_VISIBILITY_TIMEOUT=300
SQS_MAX_MESSAGES=1

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://search-cis-filesearch-xxxxx.ap-northeast-1.es.amazonaws.com
OPENSEARCH_INDEX=file-index
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=true

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/ec2/file-processor
CLOUDWATCH_LOG_STREAM=worker
USE_CLOUDWATCH=false

# ==========================================
# Processing Configuration
# ==========================================
MAX_FILE_SIZE_MB=100
MAX_IMAGE_SIZE_MB=50
MAX_OFFICE_SIZE_MB=100
MAX_PDF_SIZE_MB=100

PROCESSING_TIMEOUT=300
OCR_TIMEOUT=180

TEMP_DIR=/tmp/file-processor
CLEANUP_TEMP_FILES=true

MAX_WORKERS=4
MAX_RETRIES=3
RETRY_DELAY=5

# ==========================================
# OCR Configuration
# ==========================================
TESSERACT_CMD=tesseract
TESSDATA_PREFIX=/usr/local/share/tessdata

OCR_LANGUAGE=jpn+eng
PDF_DPI=300
IMAGE_PREPROCESSING=true
MIN_OCR_CONFIDENCE=50.0
MAX_PDF_PAGES=1000

# ==========================================
# Thumbnail Configuration
# ==========================================
THUMBNAIL_WIDTH=200
THUMBNAIL_HEIGHT=200
THUMBNAIL_QUALITY=85
THUMBNAIL_FORMAT=JPEG

THUMBNAIL_IMAGES=true
THUMBNAIL_PDFS=true
THUMBNAIL_OFFICE=true
THUMBNAIL_DOCUWORKS=true

# ==========================================
# DocuWorks Configuration
# ==========================================
DOCUWORKS_SDK_PATH=
DOCUWORKS_LICENSE_KEY=
DOCUWORKS_EXTRACT_TEXT=true
DOCUWORKS_EXTRACT_IMAGES=false
DOCUWORKS_TO_PDF=false
DOCUWORKS_OCR_FALLBACK=true

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/file-processor.log
