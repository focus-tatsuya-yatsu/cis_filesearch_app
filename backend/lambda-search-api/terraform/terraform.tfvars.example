# Terraform Variables for Lambda Search API
# Copy this file to terraform.tfvars and fill in the actual values

# AWS Region
aws_region = "ap-northeast-1"

# Environment (dev/staging/prod)
environment = "prod"

# OpenSearch Configuration
opensearch_domain_endpoint = "https://vpc-cis-filesearch-opensearch-xuupcgptq6a4opklfeh65x3uqe.ap-northeast-1.es.amazonaws.com"
opensearch_index_name      = "file-index"

# Cognito Configuration (Get these from your Cognito setup)
# cognito_user_pool_id  = "ap-northeast-1_xxxxxxxxx"
# cognito_user_pool_arn = "arn:aws:cognito-idp:ap-northeast-1:123456789012:userpool/ap-northeast-1_xxxxxxxxx"

# VPC Configuration (Get these from your VPC setup)
# vpc_id               = "vpc-xxxxxxxxxxxxxxxxx"
# private_subnet_ids   = ["subnet-xxxxxxxxxxxxxxxxx", "subnet-yyyyyyyyyyyyyyyyy"]
# opensearch_security_group_id = "sg-xxxxxxxxxxxxxxxxx"

# NOTE: Uncomment and fill in the actual values before running terraform apply
# You can get VPC IDs from: aws ec2 describe-vpcs
# You can get Subnet IDs from: aws ec2 describe-subnets --filters "Name=vpc-id,Values=YOUR_VPC_ID"
# You can get Security Group IDs from: aws ec2 describe-security-groups --filters "Name=vpc-id,Values=YOUR_VPC_ID"
